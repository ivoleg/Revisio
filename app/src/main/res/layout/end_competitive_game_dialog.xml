<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtCompetitiveGameOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations! You have learned all the words!"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your score: "
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="@+id/txtCompetitiveGameOver"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/txtCompetitiveGameOver"
        app:layout_constraintTop_toBottomOf="@+id/txtCompetitiveGameOver" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/holder"
        app:layout_constraintBottom_toBottomOf="@+id/txtScore"
        app:layout_constraintStart_toEndOf="@+id/txtScore"
        app:layout_constraintTop_toTopOf="@+id/txtScore" />

</androidx.constraintlayout.widget.ConstraintLayout>