<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtAddWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please, enter the added english word and at least one translation."
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextEngWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="English word"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="@+id/txtAddWord"
        app:layout_constraintTop_toBottomOf="@+id/txtAddWord" />

    <EditText
        android:id="@+id/editTextFrWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="French translation"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="@+id/editTextEngWord"
        app:layout_constraintTop_toBottomOf="@+id/editTextEngWord" />

    <EditText
        android:id="@+id/editTextSpnWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Spanish translation"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="@+id/editTextFrWord"
        app:layout_constraintTop_toBottomOf="@+id/editTextFrWord" />
</androidx.constraintlayout.widget.ConstraintLayout>